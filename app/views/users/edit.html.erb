          <h3>Add Your Portfolio</h3>
          <h4>These fields are optional</h4>

          <div class="form-group">
            <%= f.label :company, class: "col-md-3 control-label" %>
            <div class="col-md-8">
              <%= f.text_field :company, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :company_site, class: "col-md-3 control-label" %>
