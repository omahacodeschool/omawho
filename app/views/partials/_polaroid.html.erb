<div class="col-md-3 col-sm-4">
  <div class="polaroid <%= @user.short_category_name %>" id="<%= @user.id %>" >
    <% if @user.avatar.url(:thumb) != nil %>
      <%= image_tag @user.avatar.url(:thumb)%>
    <% else  %>
      <%= image_tag 'profile_pic.jpg' %>
    <% end  %>

    <p>
      <a href="/<%= @user.username %>">
        <span class="user_name"><%= @user.full_name.titleize %></span>
        <span class="category_name"><medium><%= @user.category.capitalize %></medium></span>
      </a>
    </p>
  </div>
</div>
