<div class="col-md-3 col-sm-4">
  <div class="polaroid <%= @user.category_name.parameterize %>" id="<%= @user.id %>" >
    <a href="/<%= @user.username %>">
      <% if @user.avatar.url(:thumb) != nil %>
        <%= image_tag @user.avatar.url(:thumb)%>
      <% else  %>
        <%= image_tag 'profile_pic.jpg' %>
      <% end  %>
    </a>

    <p>
      <a href="/<%= @user.username %>">
        <span class="user_name"><%= @user.full_name.titleize %></span>
        <span class="category_name"><medium><%= @user.category_name.titleize %></medium></span>
      </a>
    </p>
  </div>
</div>
