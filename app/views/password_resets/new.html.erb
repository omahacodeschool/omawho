<%= render 'partials/navbar' %>

<div class="container block">
  <div class="row">
    <h2 class="text-center">Please enter your email address to receive a message to reset your password.</h2>
    <%= form_tag password_resets_path, html: {class: "form-horizontal", role: "form"}, :method => :post do%>
     <div class="form-group">
       <%= label_tag :email,nil, class: "col-xs-12 col-xs-offset-2 col-sm-3 col-sm-offset-0 control-label" %>
       <div class="col-xs-8 col-xs-offset-2 col-sm-offset-0 col-sm-6">
        <%= text_field_tag :email,nil, class: "form-control" %>
       </div>
     </div>
     <div class="col-xs-12 text-center">
       <%= submit_tag "Reset my password!", class: "cool" %>
     </div>
   <% end %>
  </div>
</div>