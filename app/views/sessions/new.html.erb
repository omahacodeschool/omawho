<%= render 'partials/navbar' %>

<div class="container block">
  <h1>Login</h1>
  <div class="row">
   <%= form_tag user_session_path, :method => :post do %>
     <div class="form-group">
       <%= label_tag :email, nil, class: "col-xs-12 col-xs-offset-2 col-sm-3 col-sm-offset-0 control-label"%>
       <div class="col-xs-8 col-xs-offset-2 col-sm-offset-0 col-sm-6">
         <%= text_field_tag :email, nil, class: "form-control" %>
       </div>
     </div>
     <div class="form-group">
       <%= label_tag :password, nil, class: "col-xs-12 col-xs-offset-2 col-sm-3 col-sm-offset-0 control-label" %>
       <div class="col-xs-8 col-xs-offset-2 col-sm-offset-0 col-sm-6">
         <%= password_field_tag :password, nil, class: "form-control" %>
       </div>
     </div>
     <div class="col-xs-12 text-center">
       <%= submit_tag "Login", class: "cool" %>
       <br>
       <%= link_to "Forgot password?", new_password_reset_path %>
     </div>
   <% end %>
  </div>
</div>